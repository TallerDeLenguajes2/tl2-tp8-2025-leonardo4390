@model Presupuestos

<h2>Editar Presupuesto</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdPresupuesto" />

    <div class="form-group">
        <label asp-for="NombreDestinatario"></label>
        <input asp-for="NombreDestinatario" class="form-control" />
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion"></label>
        <input asp-for="FechaCreacion" class="form-control"type="date" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-dark mt-3 me-2">
        <i class="bi bi-pencil-square"></i> Guardar cambios
    </button>
    <a asp-action="Index" class="btn btn-outline-dark mt-3">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}