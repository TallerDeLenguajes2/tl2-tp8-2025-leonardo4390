@model dynamic
@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="text-center mt-4">
    <h1 class="text-danger">❌ Acceso Denegado (403)</h1>
    <hr />

    <h2>No posee permisos suficientes</h2>

    <p class="mt-3">
        Debe ser <strong>Administrador</strong> o <strong>Cliente</strong> para ver presupuestos.<br />
        Para modificar presupuestos debe ser <strong>Administrador</strong>.
    </p>

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Volver al Inicio</a>
        <a asp-controller="Login" asp-action="Logout" class="btn btn-secondary">Cerrar Sesión</a>
    </div>
</div>
