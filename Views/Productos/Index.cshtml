

@{
    ViewData["Title"] = "Listado de productos";
}

<h1>Productos disponibles</h1>
<a asp-action="Create" class="btn btn-outline-dark"> Crear nuevo producto</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>$@producto.Precio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@producto.IdProducto" class="btn btn-outline dark btn-sm me-2">
                    <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delet" asp-route-id="@producto.IdProducto" class="btn btn-outline dark btn-sm" title="Eliminar">
                    <i class="bi bi-trash"></i>
                    </a>

                </td>
             
            </tr>
        }
    </tbody>
    
</table>
