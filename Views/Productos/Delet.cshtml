@model Productos

<h2>¿Estás seguro que querés eliminar este producto?</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">$@Model.Precio</dd>
    </dl>

    <form asp-action="Delet" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdProducto" />
        <button type="submit" class="btn btn-outline-dark me-2">Eliminar</button>
    <a asp-action="Index" class="btn btn-outline-dark">Cancelar</a>

    </form>
</div>